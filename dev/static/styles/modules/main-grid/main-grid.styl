		box-shadow: inset 0px -161px 68px -80px rgba(0,0,0,0.69)
		@media screen and (max-width: $grid-md-max)
			margin 0

	&__category
		position absolute
		display flex
		transform translateY(-480px)
		width 62px
		height 22px
		color $white
		background-color $mate-blue
		align-items center
