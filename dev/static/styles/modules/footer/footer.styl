.footer
	background-color $black-900

.footer-top
	display flex
	@media screen and (max-width: $grid-lg-max)
		display block
		padding-bottom 70px

	&__about
		width 286px
		margin-right 129px

	&__about-img
		padding 62px 0 28px 0	

	&__about-text 
		color $white
		display flex		
		font-size 14px
		line-height 22px
		font-style normal
		font-weight normal
		width 100%
		padding-bottom 64px

	&__about-title 
		font-size 20px
		line-height 26px
		color $white
		font-weight bold
		font-style normal

	&__about-socials
		padding-top 23px

	&__about-socials-icon
		margin-right 15px
		&:last-child
			margin-right 0

	&__posts 
		width 310px		
		@media screen and (max-width: $grid-lg-max)
			display flex
			width 75%
			padding-top 80px
		@media screen and (max-width: $grid-sm-max)
			display block		
			width 70%

	&__posts-title
		font-size 20px
		line-height 26px
		font-weight bold
		font-style normal
		color $white
		padding 62px 0 26px 0
		
		@media screen and (max-width: $grid-lg-max)
			display none


	&__posts-post-img
		@media screen and (max-width: $grid-sm-max)
			display block		
			width 65%	

	&__posts-post-title	
		font-size 15px
		line-height 26px
		font-weight bold
		font-style normal
		color $white	
		padding-bottom 13px
		@media screen and (max-width: $grid-lg-max)
			line-height 14px	

	&__posts-post-text
		font-size 14px
		line-height 14px
		font-weight normal
		font-style italic
		color $gray-600

	&__posts-post-descr
		padding-top 8px	
		padding-left 13px
		@media screen and (max-width: $grid-lg-max)
			display block	
			padding 0
			width 50%
			line-height 14px	
			padding-top 5px

	&__posts-post
		display flex	
		padding-bottom 25px
		&:last-child
			padding-bottom 40px
		@media screen and (max-width: $grid-lg-max)
			display block	

	&__forms
		@media screen and (max-width: $grid-lg-max)
			display flex
		@media screen and (max-width: $grid-sm-max)
			display block		

	&__forms-block
		width 310px
		margin-left 129px
		@media screen and (max-width: $grid-lg-max)
			margin 0

	&__forms-block-title
		font-size 20px
		line-height 26px
		font-weight bold
		font-style normal
		color $white
		padding 62px 0 26px 0
		@media screen and (max-width: $grid-lg-max)
			padding 40px 0px 20px 0

	&__form-name
		width 270px
		height 50px
		background-color $black-300
		border 1px solid transparent
		margin-bottom 14px
		border-radius 3px
		padding-left 10px
		@media screen and (max-width: $grid-lg-max)
			margin-right 10px

	&__form-email
		width 270px
		height 50px
		background-color $black-300
		border 1px solid transparent
		margin-bottom 30px
		border-radius 3px
		padding-left 10px

	&__form-btn
		border 1px solid transparent
		padding 17px 61px 17px 61px	
		background-color $black-600
		color $white
		text-decoration none	
		border-radius 3px	
		font-size 14px
		line-height 18px
		font-style normal	
		&:hover
			background-color $white
			color $gray-900
			border 1px solid $gray-900

.footer-bottom
	background $black

	&__main
		display flex
		justify-content space-between
		padding 39px 0 39px 0

	&__main-copyright
		color $white
		font-size 14px
		line-height 18px
		font-style normal
		font-weight normal

			

				
				