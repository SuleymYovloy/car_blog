html
	font-size 9px
	height 100%

	@media (min-width: $grid-lg)
		font-size: 10px

	@media (min-width: $grid-xxl)
		font-size: 12px

body
	height 100%
	margin 0
	-moz-osx-font-smoothing: grayscale
	font-family 'PT Sans'
	-webkit-font-smoothing: antialiased

h1, h2, h3, h4, h5, h6 
	margin 0

ul, li
	list-style-type none
	margin 0
	padding 0

a
	text-decoration none

p
	margin 0

audio,
canvas,
iframe,
img,
svg,
video,
textarea
	vertical-align middle

textarea 
	resize none

section
	position relative

input,
select,
button
	outline none

*, *:before, *:after
	box-sizing border-box

.wrapper
	height 100%

.main
	// 
	
.header,
.footer
	.container
		@media (max-width: $grid-sm-max)
			padding-left 1.6rem
			padding-right 1.6rem
		